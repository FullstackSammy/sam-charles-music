@{
    ViewData["Title"] = "Home Page";
}

<!-- Music Section -->
<!--This is the About section-->
<section id="music" class="container-fluid">
    <h2 class="section-header text-center">Music</h2>
    <!-- Carousel wrapper -->
    <div id="carouselMultiItemExample"
         class="carousel slide carousel-dark text-center"
         data-mdb-ride="carousel">
        <!-- Controls -->
        <div class="d-flex justify-content-center mb-4">
            <button class="carousel-control-prev position-relative"
                    type="button"
                    data-mdb-target="#carouselMultiItemExample"
                    data-mdb-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next position-relative"
                    type="button"
                    data-mdb-target="#carouselMultiItemExample"
                    data-mdb-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- Inner -->
        <div class="carousel-inner py-4">
            <!-- Single item -->
            <div class="carousel-item active">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card">
                                <img src="./img/fight.jpg"
                                     class="card-img-top"
                                     alt="Waterfall" />
                                <div class="card-body">
                                    <a href="https://distrokid.com/hyperfollow/samcharles1/fight-for-what-is-right" target="_blank" class="btn btn-dark">Listen</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 d-none d-lg-block">
                            <div class="card">
                                <img src="./img/fly.jpg"
                                     class="card-img-top"
                                     alt="Sunset Over the Sea" />
                                <div class="card-body">
                                    <a href="https://distrokid.com/hyperfollow/samcharles1/fly-3" target="_blank" class="btn btn-dark">Listen</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 d-none d-lg-block">
                            <div class="card">
                                <img src="./img/goodbye.jpg"
                                     class="card-img-top"
                                     alt="Sunset over the Sea" />
                                <div class="card-body">
                                    <a href="https://distrokid.com/hyperfollow/samcharles1/goodbye-for-now-2" target="_blank" class="btn btn-dark">Listen</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Single item -->
            <div class="carousel-item">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-12">
                            <div class="card">
                                <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/184.webp"
                                     class="card-img-top"
                                     alt="Fissure in Sandstone" />
                                <div class="card-body">
                                    <h5 class="card-title">Card title</h5>
                                    <p class="card-text">
                                        Some quick example text to build on the card title and make up the bulk
                                        of the card's content.
                                    </p>
                                    <a href="#!" class="btn btn-primary">Button</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Inner -->
    </div>
    <!-- Carousel wrapper -->
</section>
<section class="container-fluid">

</section>