<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sam Charles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SamCharles.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.2.0/css/all.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: whitesmoke;">Sam Charles</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link" style="color: whitesmoke !important;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: whitesmoke !important;" href="#music">Music</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: whitesmoke !important;" href="#news">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color: whitesmoke !important;" href="#contact">Contact</a>
                        </li>
                    </ul>
                    <ul class="nav justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" href="https://facebook.com/samcharlesmusic" target="_blank"
                               aria-label="external link that will take you to our facebook">
                                <i class="fa-brands fa-facebook"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://instagram.com/samcharlesmusiic" target="_blank"
                               aria-label="external link that will take you to our instagram">
                                <i class="fa-brands fa-square-instagram"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://open.spotify.com/artist/6OQG9J5u01KiuGWV7jkzcq?si=NJGY2melTfCcedkwVkMgaA" target="_blank"
                               aria-label="external link that will take you to our twitter">
                                <i class="fa-brands fa-spotify"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://youtube.com" target="_blank"
                               aria-label="external link that will take you to our youtube">
                                <i class="fa-brands fa-youtube"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div class="video">
            <video src="./videos/header-vid.mp4" poster="https://morganwallen.com//wp-content/themes/mw2020/images/video-image_riser.jpg" data-object-fit="cover" class="full-vid" autoplay="" playsinline="" muted="" loop="" preload=""></video>
        </div>
    <div class="container-fluid" style="margin 0; padding: 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom">
        <div class="container text-center">
            &copy; 2023 - SamCharles
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
